<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.settings.SettingsFragment"
    >

  <data>
    <variable
        name="user"
        type="org.aossie.agoraandroid.data.db.entities.User"
        />
  </data>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/grey_color"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <RelativeLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200dp"
            android:background="@drawable/mountain"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            >

          <androidx.cardview.widget.CardView
              android:id="@+id/iv_profile_pic"
              android:layout_width="@dimen/size_100dp"
              android:layout_height="@dimen/size_100dp"
              android:layout_centerInParent="true"
              android:layout_centerHorizontal="true"
              android:layout_marginStart="@dimen/size_15dp"
              android:layout_marginTop="@dimen/size_75dp"
              android:background="@android:color/transparent"
              android:contentDescription="@string/agora"
              android:innerRadius="0dp"
              android:shape="ring"
              android:thicknessRatio="1.9"
              app:cardCornerRadius="@dimen/size_50dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"
                />


          </androidx.cardview.widget.CardView>

          <TextView
              android:id="@+id/tv_email_id"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginStart="@dimen/size_15dp"
              android:ellipsize="end"
              android:hint="@string/agora_example_com"
              android:text="@{user.email}"
              android:autoSizeTextType="uniform"
              android:autoSizeMinTextSize="12sp"
              android:autoSizeMaxTextSize="100sp"
              android:autoSizeStepGranularity="2sp"
              android:textColor="@color/black_text_color"
              android:textColorHint="@color/black_text_color"
              app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
              app:layout_constraintTop_toBottomOf="@+id/tv_name"
              />

          <TextView
              android:id="@+id/tv_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_email_id"
              android:hint="@string/john_doe"
              android:text="@{(user.firstName == null ? @string/empty_string : user.firstName) + @string/space + (user.lastName == null ? @string/empty_string : user.lastName)}"
              android:textColorHint="@color/black_text_color"
              android:textColor="@color/black_text_color"
              android:layout_centerVertical="true"
              android:layout_marginStart="@dimen/size_15dp"
              android:layout_marginTop="@dimen/size_90dp"
              android:textSize="@dimen/size_18sp"
              app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
              app:layout_constraintTop_toTopOf="parent"
              />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:paddingVertical="@dimen/size_10dp"
            android:background="@color/whiteColor"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/size_22sp"
            />

        <TextView
            android:id="@+id/tv_account_settings"
            style="@style/WhiteButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_settings"
            android:layout_marginHorizontal="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:gravity="center"
            android:text="@string/account_settings"
            android:textSize="@dimen/size_16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_about"
            style="@style/WhiteButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_account_settings"
            android:layout_marginHorizontal="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:gravity="center"
            android:text="@string/about_us"
            android:textSize="@dimen/size_16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_share"
            style="@style/WhiteButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_about"
            android:layout_marginHorizontal="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:gravity="center"
            android:text="@string/share_with_others"
            android:textSize="@dimen/size_16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_contact_us"
            style="@style/WhiteButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_share"
            android:layout_marginHorizontal="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:gravity="center"
            android:text="@string/contact_us"
            android:textSize="@dimen/size_16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_logout"
            style="@style/WhiteButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contact_us"
            android:layout_marginHorizontal="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:gravity="center"
            android:text="@string/logout"
            android:textSize="@dimen/size_16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />
      </RelativeLayout>
      <ProgressBar
          android:id="@+id/progress_bar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/progressbar_background"
          android:padding="@dimen/size_10dp"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</layout>

