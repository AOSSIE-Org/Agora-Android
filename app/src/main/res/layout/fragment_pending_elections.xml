<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".ui.fragments.displayelections.PendingElectionsFragment"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/fieldSearch"
      style="@style/SearchFieldStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/size_8dp"
      android:padding="0dp"
      app:boxStrokeWidth="0dp"
      app:boxStrokeWidthFocused="0dp"
      app:startIconDrawable="@drawable/ic_baseline_search_24"
      app:startIconTint="@color/green_gradient_color"
      >

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        android:gravity="center_vertical"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:padding="0dp"
        android:textColor="@color/green_gradient_color"
        android:textColorHint="@color/grey"
        android:textSize="18sp"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pending_elections"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:item_layout="@layout/list_item_election_details"
        />
      <TextView
        android:id="@+id/tv_empty_election"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_elections"
        android:textSize="@dimen/size_18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
      <TextView
        android:id="@+id/tv_something_went_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/something_went_wrong_please_try_again_later"
        android:textSize="@dimen/size_18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </LinearLayout>
</layout>
