<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >
  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginHorizontal="@dimen/size_2dp"
    android:layout_weight="1"
    android:background="@drawable/corner_gradient"
    android:contentDescription="@string/agora"
    android:padding="@dimen/size_20dp"
    android:src="@drawable/vote"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/size_40dp"
    android:layout_marginBottom="@dimen/size_15dp"
    android:text="@string/third_welcome_message"
    android:textColor="@color/black_text_color"
    android:textSize="@dimen/size_28sp"
    android:textStyle="bold"
    />
</LinearLayout>