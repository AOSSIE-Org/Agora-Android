<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_candidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Candidate 1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="@dimen/browser_actions_context_menu_min_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgreyforavatarbg"
        app:layout_constraintTop_toBottomOf="@id/tv_candidate"/>

</androidx.constraintlayout.widget.ConstraintLayout>